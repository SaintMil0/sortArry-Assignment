```````````````````````
import java.util.Scanner;
import java.util.Arrays;

public class Main {

    // Method to sort array in descending order
    public static void sortArray(int[] myArr, int arrSize) {
        Arrays.sort(myArr);

        // Reverse the array to get descending order
        for (int i = 0; i < arrSize / 2; i++) {
            int temp = myArr[i];
            myArr[i] = myArr[arrSize - 1 - i];
            myArr[arrSize - 1 - i] = temp;
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);  // Create scanner only once

        while (true) {
            System.out.print("Enter array size: ");

            // Validate if the entered input is an integer
            if (!scanner.hasNextInt()) {
                System.out.println("Input must be an integer");
                scanner.next();  // Discard the invalid input
            } else {
                int numElements = scanner.nextInt();  // Now this will correctly read the integer
                int[] arr = new int[numElements];

                // Read the elements into the array
                System.out.println("Enter " + numElements + " integers: ");
                for (int i = 0; i < numElements; i++) {
                    if (scanner.hasNextInt()) {
                        arr[i] = scanner.nextInt();
                    } else {
                        System.out.println("Input must be an integer.");
                        scanner.next();  // Discard invalid input and continue
                        i--;  // Decrement i to retry input for this index
                    }
                }

                // Sort the array in descending order
                sortArray(arr, numElements);

                // Output the sorted array
                System.out.println("Sorted array in descending order: ");
                for (int num : arr) {
                    System.out.print(num + " ");
                }

                break;  // Exit the loop after processing the array
            }
        }

        scanner.close();  // Close scanner after everything is done
    }
}
